<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center mb-5">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id  %>?_method=PUT" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
    
                <div class="form-floating mb-4">
                    <input type="text" class="form-control" id="title" name="campground[title]" value="<%= campground.title %>">
                    <label for="title" class="form-label">Title</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please, write a Campground name.
                    </div>
                </div>
        
                <div class="form-floating mb-4">
                    <input type="text" class="form-control" id="location" name="campground[location]" value="<%= campground.location %>">
                    <label for="location" class="form-label">Location</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please, write a location for the Campground.
                    </div>
                </div>
    
                <div class="input-group mb-4">
                    <span class="input-group-text">$</span>
                    <div class="form-floating">
                      <input type="text" class="form-control" id="price" name="campground[price]" value="<%= campground.price %>">
                      <label for="price">Price</label>
                    </div>
                    <span class="input-group-text">.00</span>
    
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please, assign a price.
                    </div>
                </div>
    
                <div class="mb-4">
                    <div class="form-floating">
                        <textarea type="text" class="form-control" id="description" style="height: 150px" name="campground[description]" required><%= campground.description %></textarea>
                        <label for="description">Description</label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please, add a description.
                        </div>
                    </div>
                </div>
    
                <div class="mb-4">
                    <label for="images" class="form-label">Add more images</label>
                    <input class="form-control" type="file" id="images" name="image" multiple>
                </div>
    
                <div class="mb-3">
                    <label class="form-label">Actual Images</label>
                </div>

                <div class="mb-2">
                    <% campground.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                    <% }) %>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update</button>
                </div>
    
            </form>
            <a class="btn btn-outline-danger" href="/campgrounds/<%= campground._id  %>">Cancel</a>
        </div>
    </div>