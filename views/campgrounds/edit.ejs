<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/new_edit.css">

<div class="container justify-content-center align-items-center">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
            <div class="card shadow bg-white bg-opacity-25 mb-5">

                <div class="card-body">
                    <h1 class="card-title mb-4">Edit Campground</h1>

                    <form action="/campgrounds/<%= campground._id  %>?_method=PUT" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" id="title" name="campground[title]" required placeholder="Title" value="<%= campground.title %>">
                            <label for="title" class="form-label">Title</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please, write a Campground name.
                            </div>
                        </div>
                
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" id="location" name="campground[location]" value="<%= campground.location %>">
                            <label for="location" class="form-label">Location</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please, write a location for the Campground.
                            </div>
                        </div>
    
                        <div class="input-group mb-4">
                            <span class="input-group-text">$</span>
                            <div class="form-floating">
                              <input type="text" class="form-control" id="price" name="campground[price]" value="<%= campground.price %>">
                              <label for="price">Price</label>
                            </div>
                            <span class="input-group-text">.00</span>
            
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please, assign a price.
                            </div>
                        </div>
            
                        <div class="mb-4">
                            <div class="form-floating">
                                <textarea type="text" class="form-control" id="description" style="height: 150px" name="campground[description]" required><%= campground.description %></textarea>
                                <label for="description">Description</label>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please, add a description.
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Actual Images</label>
                        </div>
        
                        <div class="row row-cols-1 row-cols-md-3 g-4">
                            <% campground.images.forEach(function(img, i) { %>
                                <div class="col">
                                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                                    <div class="form-check-inline d-block">
                                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                                        <label for="image-<%=i%>">Delete</label>
                                    </div>
                                </div>
                            <% }) %>
                        </div>

                        <div class="mb-4">
                            <label for="images" class="form-label">Add more images</label>
                            <input class="form-control custom-file" type="file" id="images" name="image" multiple>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-info btn-block">Update</button>
                        </div>

                    </form>

                    <a class="btn btn-danger d-grid gap-2 mb-3 btn-block" href="/campgrounds/<%= campground._id  %>">Cancel</a>

                </div>

            </div>
        </div>
    </div>
</div>